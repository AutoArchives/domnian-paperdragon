 src/main/java/org/bukkit/Material.java        | 67 +++++++++++++++++++
 2 files changed, 84 insertions(+)

diff --git a/src/main/java/com/domnian/paperdragon/api/DAPI_Misc.java b/src/main/java/com/domnian/paperdragon/api/DAPI_Misc.java
index d80840bf..e3f588dd 100644
--- a/src/main/java/com/domnian/paperdragon/api/DAPI_Misc.java
+++ b/src/main/java/com/domnian/paperdragon/api/DAPI_Misc.java
@@ -1,5 +1,7 @@
 package com.domnian.paperdragon.api;
 
+import org.bukkit.NamespacedKey;
+import org.bukkit.entity.EntityType;
 import org.bukkit.inventory.ItemStack;
 
 import javax.annotation.Nonnull;
@@ -8,6 +10,21 @@ import java.util.List;
 
 public interface DAPI_Misc {
 
+    /**
+     * Gets Registered Entity Type for this spawn egg.
+     * @param bukkitItem
+     * @return
+     */
+    EntityType getTypeForSpawnEgg(@Nonnull ItemStack bukkitItem);
+
+    /**
+     * Changes the type of a Spawn Egg and returns new itemstack. ALWAYS USE THE RETURNED STACK
+     * @param bukkitItem
+     * @param key
+     * @return
+     */
+    ItemStack spawnEggAsType(@Nonnull ItemStack bukkitItem, @Nonnull NamespacedKey key);
+
     /**
      * Returns if this is a shulker box with items in it.
      * @param shulker
diff --git a/src/main/java/org/bukkit/Material.java b/src/main/java/org/bukkit/Material.java
index 10dfe5fe..f1ee8e76 100644
--- a/src/main/java/org/bukkit/Material.java
+++ b/src/main/java/org/bukkit/Material.java
@@ -4911,4 +4911,71 @@ public enum Material implements Keyed {
                 return true;
         }
     }
+
