+package com.domnian.paperdragon.events;
+
+import org.bukkit.event.HandlerList;
+import org.bukkit.event.entity.PlayerDeathEvent;
+import org.bukkit.event.player.PlayerEvent;
+
+public class EnhancedPlayerDeathEvent extends PlayerEvent {
+
+    private static HandlerList handlerList = new HandlerList();
+    private PlayerDeathEvent cause;
+    private String sourceKey;
+
+    public static HandlerList getHandlerList() {
+        return handlerList;
+    }
+
+    public HandlerList getHandlers() {
+        return handlerList;
+    }
+
+    public EnhancedPlayerDeathEvent(PlayerDeathEvent parent, String key) {
+        super(parent.getEntity());
+        this.cause = parent;
+        this.sourceKey = key != null ? key : "death.attack.generic";
+    }
+
+    public String getSourceKey() {
+        return sourceKey;
+    }
+
+    public PlayerDeathEvent getCause() {
+        return cause;
+    }
+
+}
