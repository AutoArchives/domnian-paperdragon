Date: Fri, 26 Jul 2013 22:19:29 -0400
Subject: [PATCH] Allow force spawns

Pass spawn reason force to not allow plugins to block
Force some cases where plugins should not be allowed to block it.
---
 src/main/java/net/minecraft/server/Entity.java     | 2 +-
 src/main/java/net/minecraft/server/PlayerList.java | 2 +-
 src/main/java/net/minecraft/server/World.java      | 4 ++--
 3 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/src/main/java/net/minecraft/server/Entity.java b/src/main/java/net/minecraft/server/Entity.java
index f70464beb..103409f18 100644
--- a/src/main/java/net/minecraft/server/Entity.java
+++ b/src/main/java/net/minecraft/server/Entity.java
@@ -2468,7 +2468,7 @@ public abstract class Entity implements ICommandListener {
                 boolean flag = entity.attachedToPlayer;
 
                 entity.attachedToPlayer = true;
-                worldserver1.addEntity(entity);
+                worldserver1.addEntity(entity, org.bukkit.event.entity.CreatureSpawnEvent.SpawnReason.FORCE); // PaperDragon
                 entity.attachedToPlayer = flag;
                 worldserver1.entityJoinedWorld(entity, false);
                 // CraftBukkit start - Forward the CraftEntity to the new entity
diff --git a/src/main/java/net/minecraft/server/PlayerList.java b/src/main/java/net/minecraft/server/PlayerList.java
index c47e05c19..44474cd2e 100644
--- a/src/main/java/net/minecraft/server/PlayerList.java
+++ b/src/main/java/net/minecraft/server/PlayerList.java
@@ -1010,7 +1010,7 @@ public abstract class PlayerList {
                         entity.getBukkitEntity().setVelocity(velocity);
                     }
                 }
-                // worldserver1.addEntity(entity);
+                // worldserver1.addEntity(entity, org.bukkit.event.entity.CreatureSpawnEvent.SpawnReason.FORCE); // PaperDragon
                 worldserver1.entityJoinedWorld(entity, false);
             }
 
diff --git a/src/main/java/net/minecraft/server/World.java b/src/main/java/net/minecraft/server/World.java
index 80de49306..a89bd19ad 100644
--- a/src/main/java/net/minecraft/server/World.java
+++ b/src/main/java/net/minecraft/server/World.java
@@ -1162,14 +1162,14 @@ public abstract class World implements IBlockAccess {
             }
         } // Spigot end
 
-        if (event != null && (event.isCancelled() || entity.dead)) {
+        if (spawnReason != SpawnReason.FORCE && event != null && (event.isCancelled() || entity.dead)) { // PaperDragon
             entity.dead = true;
             return false;
         }
         // CraftBukkit end
 
 
-        if (!flag && !this.isChunkLoaded(i, j, false)) {
+        if (spawnReason != SpawnReason.FORCE && !flag && !this.isChunkLoaded(i, j, false)) { // PaperDragon
             return false;
         } else {
             if (entity instanceof EntityHuman) {
