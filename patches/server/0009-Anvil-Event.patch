@@ -298,6 +305,16 @@ public class ContainerAnvil extends Container {
             if (this.levelCost.b() >= maximumRepairCost && !this.player.abilities.canInstantlyBuild) { // CraftBukkit
                 itemstack1 = ItemStack.a;
             }
