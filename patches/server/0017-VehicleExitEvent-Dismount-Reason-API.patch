@@ -366,6 +366,7 @@ public abstract class EntityHuman extends EntityLiving {
     @Override
     public void passengerTick() {
         if (!this.world.isClientSide && this.isSneaking() && this.isPassenger()) {
+            this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.PLAYER; // PaperDragon
             this.stopRiding();
             this.setSneaking(false);
         } else {
diff --git a/src/main/java/net/minecraft/server/EntityLiving.java b/src/main/java/net/minecraft/server/EntityLiving.java
index 16d25b0..648c074 100644
--- a/src/main/java/net/minecraft/server/EntityLiving.java
+++ b/src/main/java/net/minecraft/server/EntityLiving.java
@@ -285,6 +285,7 @@ public abstract class EntityLiving extends Entity {
                 }
 
                 if (!this.world.isClientSide && this.isPassenger() && this.getVehicle() != null && !this.getVehicle().bf()) {
+                    this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.WATER; // PaperDragon
                     this.stopRiding();
                 }
             } else if (this.getAirTicks() < this.bp()) {
@@ -3095,6 +3096,7 @@ public abstract class EntityLiving extends Entity {
 
     public void e(BlockPosition blockposition) {
         if (this.isPassenger()) {
+            if (this instanceof EntityHuman) this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.PLAYER; // PaperDragon
             this.stopRiding();
         }
 
diff --git a/src/main/java/net/minecraft/server/PlayerList.java b/src/main/java/net/minecraft/server/PlayerList.java
index a183bb4..b46e30c 100644
--- a/src/main/java/net/minecraft/server/PlayerList.java
