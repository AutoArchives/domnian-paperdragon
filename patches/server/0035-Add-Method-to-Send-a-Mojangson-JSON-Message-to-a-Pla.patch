@@ -1937,6 +1937,10 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
     public <T> T getUserObject(Plugin owner) {
         return (T) userObjects.getOrDefault(owner, null);
     }
+
+    public void sendJsonMessage(String json) {
+        getHandle().sendMessage(net.minecraft.server.IChatBaseComponent.ChatSerializer.a(json));
+    }
