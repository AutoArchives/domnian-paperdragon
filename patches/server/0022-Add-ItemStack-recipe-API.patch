+++ b/src/main/java/net/minecraft/server/ShapedRecipes.java
@@ -92,7 +92,8 @@ public class ShapedRecipes implements IRecipe {
         for (RecipeItemStack list : this.items) {
             if (list != null && list.choices.length > 0) {
                 net.minecraft.server.ItemStack stack = list.choices[0];
-                recipe.setIngredient(c, org.bukkit.craftbukkit.util.CraftMagicNumbers.getMaterial(stack.getItem()), (list.choices.length) > 1 ? 32767 : stack.getData());
+                //recipe.setIngredient(c, org.bukkit.craftbukkit.util.CraftMagicNumbers.getMaterial(stack.getItem()), (list.choices.length) > 1 ? 32767 : stack.getData()); // PaperDragon
+                recipe.setIngredient(c, stack.getBukkitStack()); // PaperDragon
             }
             c++;
         }
@@ -153,7 +154,8 @@ public class ShapedRecipes implements IRecipe {
                     }
                 }
 
-                if (!recipeitemstack.a(inventorycrafting.c(k, l))) {
+                //if (!recipeitemstack.a(inventorycrafting.c(k, l))) { // PaperDragon
+                if (!inventorycrafting.c(k, l).satisfiesRecipeRequirement(recipeitemstack)) { // PaperDragon
                     return false;
                 }
             }
