Subject: [PATCH] VehicleExitEvent Dismount Reason API

---
 src/main/java/net/minecraft/server/Entity.java       | 12 +++++++++++-
 src/main/java/net/minecraft/server/EntityHuman.java  |  1 +
 src/main/java/net/minecraft/server/EntityLiving.java |  2 ++
 src/main/java/net/minecraft/server/PlayerList.java   |  1 +
 4 files changed, 15 insertions(+), 1 deletion(-)

diff --git a/src/main/java/net/minecraft/server/Entity.java b/src/main/java/net/minecraft/server/Entity.java
index e6aec7bb0f..b24cb6ab8c 100644
--- a/src/main/java/net/minecraft/server/Entity.java
+++ b/src/main/java/net/minecraft/server/Entity.java
@@ -318,6 +318,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
         }
 
         if (this.isPassenger()) {
+            if (this.dead) this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.DEAD; // PaperDragon
             this.stopRiding();
         }
 
@@ -2035,6 +2036,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
             return false;
         } else {
             if (this.isPassenger()) {
+                entity.dismountReason = VehicleExitEvent.DismountReason.TRANSFER; // PaperDragon
                 this.stopRiding();
             }
 
@@ -2055,7 +2057,11 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
 
     public void ejectPassengers() {
         for (int i = this.passengers.size() - 1; i >= 0; --i) {
-            ((Entity) this.passengers.get(i)).stopRiding();
+            // PaperDragon start
+            Entity entity = this.passengers.get(i);
+            if (this.dead) entity.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.DEAD;
+            entity.stopRiding();
+            // PaperDragon end
         }
 
     }
@@ -2126,6 +2132,8 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
     // Paper start
     protected boolean removePassenger(Entity entity) { return removePassenger(entity, false);}
     protected boolean removePassenger(Entity entity, boolean suppressCancellation) { // CraftBukkit
+        VehicleExitEvent.DismountReason reason = dismountReason; // PaperDragon
+        dismountReason = VehicleExitEvent.DismountReason.UNKNOWN; // PaperDragon
         // Paper end
         if (entity.getVehicle() == this) {
             throw new IllegalStateException("Use x.stopRiding(y), not y.removePassenger(x)");
@@ -2138,6 +2146,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
                         (Vehicle) getBukkitEntity(),
                         (LivingEntity) entity.getBukkitEntity(), !suppressCancellation // Paper
                 );
+                event.reason = reason; // PaperDragon
                 Bukkit.getPluginManager().callEvent(event);
                 CraftEntity craftn = (CraftEntity) entity.getBukkitEntity().getVehicle();
                 Entity n = craftn == null ? null : craftn.getHandle();
@@ -2558,6 +2567,7 @@ public abstract class Entity implements INamableTileEntity, ICommandListener, Ke
         return String.format(Locale.ROOT, "%s['%s'/%d, uuid='%s', l='%s', x=%.2f, y=%.2f, z=%.2f, cx=%d, cz=%d, tl=%d, v=%b, d=%b]", new Object[] { this.getClass().getSimpleName(), this.getDisplayName().getString(), Integer.valueOf(this.id), this.uniqueID.toString(), this.world == null ? "~NULL~" : this.world.toString(), Double.valueOf(this.locX()), Double.valueOf(this.locY()), Double.valueOf(this.locZ()), getChunkX(), getChunkZ(), this.ticksLived, this.valid, this.dead}); // Paper - add more information
     }
 
+    VehicleExitEvent.DismountReason dismountReason = VehicleExitEvent.DismountReason.UNKNOWN; // PaperDragon
     public boolean isInvulnerable(DamageSource damagesource) {
         return this.invulnerable && damagesource != DamageSource.OUT_OF_WORLD && !damagesource.v() && !isDisabled; // PaperDragon - add && !isDisabled
     }
diff --git a/src/main/java/net/minecraft/server/EntityHuman.java b/src/main/java/net/minecraft/server/EntityHuman.java
index 2cada09ced..e0273a954a 100644
--- a/src/main/java/net/minecraft/server/EntityHuman.java
+++ b/src/main/java/net/minecraft/server/EntityHuman.java
@@ -364,6 +364,7 @@ public abstract class EntityHuman extends EntityLiving {
     @Override
     public void passengerTick() {
         if (this.eq() && this.isPassenger()) {
+            this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.PLAYER; // PaperDragon
             this.stopRiding();
             this.setSneaking(false);
         } else {
diff --git a/src/main/java/net/minecraft/server/EntityLiving.java b/src/main/java/net/minecraft/server/EntityLiving.java
index 18d21b6062..ccb06eb525 100644
--- a/src/main/java/net/minecraft/server/EntityLiving.java
+++ b/src/main/java/net/minecraft/server/EntityLiving.java
@@ -309,6 +309,7 @@ public abstract class EntityLiving extends Entity {
                 }
 
                 if (!this.world.isClientSide && this.isPassenger() && this.getVehicle() != null && !this.getVehicle().bp()) {
+                    this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.WATER; // PaperDragon
                     this.stopRiding();
                 }
             } else if (this.getAirTicks() < this.bD()) {
@@ -3414,6 +3415,7 @@ public abstract class EntityLiving extends Entity {
 
     public void entitySleep(BlockPosition blockposition) {
         if (this.isPassenger()) {
+            if (this instanceof EntityHuman) this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.PLAYER; // PaperDragon
             this.stopRiding();
         }
 
diff --git a/src/main/java/net/minecraft/server/PlayerList.java b/src/main/java/net/minecraft/server/PlayerList.java
index 3c5ba8f2fd..15fdbcbdd5 100644
--- a/src/main/java/net/minecraft/server/PlayerList.java
+++ b/src/main/java/net/minecraft/server/PlayerList.java
@@ -517,6 +517,7 @@ public abstract class PlayerList {
 
             if (entity.hasSinglePlayerPassenger()) {
                 PlayerList.LOGGER.debug("Removing player mount");
+                entityplayer.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.DISCONNECT; // PaperDragon
                 entityplayer.stopRiding();
                 worldserver.removeEntity(entity);
                 entity.dead = true;
