+        if (chunkAccess instanceof LevelChunk) {
+            chunk = (LevelChunk) chunkAccess;
+        } else if (chunkAccess instanceof ImposterProtoChunk) {
+            chunk = ((ImposterProtoChunk) chunkAccess).getWrapped();
