 1 file changed, 12 insertions(+)

diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
index f153ea6..5f06fac 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
@@ -2093,4 +2093,16 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
         return spigot;
     }
     // Spigot end
+
+    // PaperDragon start - User Object API
+    private java.util.Map<Plugin, Object> userObjects = new java.util.HashMap<>();
+    public void setUserObject(Plugin owner, Object object) {
+        userObjects.put(owner, object);
+    }
+
+    public <T> T getUserObject(Plugin owner) {
+        return (T) userObjects.getOrDefault(owner, null);
+    }
+    // PaperDragon end
+
 }
