+package com.domnian.paperdragon;
+
+import com.domnian.paperdragon.events.PlayerHitPlayerEvent;
+import net.minecraft.server.Entity;
+import net.minecraft.server.EntityPlayer;
+import org.bukkit.craftbukkit.entity.CraftPlayer;
+import org.bukkit.entity.Player;
+import org.bukkit.inventory.ItemStack;
+
+public class PDEventFactory {
+
+    public static void handlePlayerHitPlayer(Entity hitter, Entity target) {
+        if ((hitter instanceof EntityPlayer) && (target instanceof EntityPlayer)) {
+            Player a = ((CraftPlayer)hitter.getBukkitEntity());
+            Player b = ((CraftPlayer)target.getBukkitEntity());
+            ItemStack item = ((CraftPlayer)hitter.getBukkitEntity()).getInventory().getItemInMainHand();
+            new PlayerHitPlayerEvent(a, b, item).callEvent();
+        }
+    }
+
+}
